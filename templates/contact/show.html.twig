{% extends 'base.html.twig' %}

{% block title %}Contact{% endblock %}

{% block body %}
<h1>Fiche Contact</h1>

<table class="table">
    <tbody>
        <tr>
            <th>Id</th>
            <td>{{ contact.id }}</td>
        </tr>
        <tr>
            <th>Département à contacter</th>
            <td>{{ contact.department }}</td>
        </tr>
        <tr>
            <th>Nom</th>
            <td>{{ contact.nom }}</td>
        </tr>
        <tr>
            <th>Prénom</th>
            <td>{{ contact.prenom }}</td>
        </tr>
        <tr>
            <th>Email</th>
            <td>{{ contact.mail }}</td>
        </tr>
        <tr>
            <th>Message</th>
            <td>{{ contact.message }}</td>
        </tr>
    </tbody>
</table>

<a href="{{ path('contact_index') }}">Retour à la liste</a>

<a href="{{ path('contact_edit', {'id': contact.id}) }}">Éditer</a>

{{ include('contact/_delete_form.html.twig') }}
{% endblock %}